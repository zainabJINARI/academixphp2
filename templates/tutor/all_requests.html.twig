{% block body %}
<div class='dashboard'>
  <ul class="dashboard-options">
    <li class="nav-item" id="requestsTutos">
      <a href="/app_tutor">Courses Area</a>
    <li class="nav-item selected" id="manageTutos">
      <a href="#requests-area" >Requests Area</a>
    </li>

    <li class="nav-item" id="updateBtn">
      <a href="#update">Update Profile</a>
    </li>
    <li class="nav-item" id="deleteBtn">
      <a href="#delete">Delete Profile</a>
    </li>
  </ul>

  <div>

    <h2>Welcome <span>{{ app.user.username }}</span> To Academix</h2>

    <div  class="mycourses">
        <div class="completed-courses requests">
            <h3>Course Creation Requests</h3>
            <ul>
                {% if create_request|length==0 %}

                    No requests yet 
                
                {% endif %}
                {% for request in create_request %}
                    <li id={request.id}>
                        <i class="fa-solid fa-square-plus create"></i>
                        <div>
                            <h4>{{ request.course }}</h4>
                            <p>{{ request.time }}</p>
                        </div>
                        
                        <div>
                            <p><span>Status: </span> <span class="bold {{ request.status }}"> {{ request.status }}</span></p>
                            <div>
                                <a href="" class='option-tutor-request'> {{ request.status=='pending' ? 'Cancel' : 'Delete' }}</a>
                                
                               
                            </div>
                        </div>
                    </li>
                {% endfor %}
                
        
            </ul>
            
        </div>
        <div class="completed-courses requests">
            <h3>Course Deletion Requests</h3>
            <ul>
                
                {% for request in  delete_request %}
                <li>
                    <i class="fa-solid fa-trash delete"></i>
                    <div>
                        <h4>{{ request.course }}</h4>
                        <p>{{ request.time }}</p>
                    </div>
                    
                    <div>
                        <p><span>Status: </span> <span class="bold {{ request.status }}">{{ request.status }}</span></p>
                        <div>
                            <a href="/tutor/cancel-delete-request/{{ request.idrequest }}" class='option-tutor-request'> {{ request.status=='pending' ? 'Cancel' : 'Delete' }}</a>
                        </div>

                    </div>
                    
                </li>
                {% endfor %}
            </ul>
        </div>

    </div>
  </div>


</div>








{% endblock %}