{% extends 'base.html.twig' %}

{% block title %}Hello BlaController!
{% endblock %}
{% block head %}
    <script src="{{ asset('js/main.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('css/editprofile.css') }}" />
{% endblock %}
{% block header %}
{% endblock %}

{% block body %}

<div id="edit-account-form">
        <h2>Modifier le compte</h2>

        <form action="#">
            <div class="form-group">
                <label for="fullname">Nom complet</label>
                <input type="text" id="fullname" name="fullname" value="Nick Roy">
            </div>

            <div class="form-group">
                <label for="profession">Profession</label>
                <input type="text" id="profession" name="profession" value="">
            </div>

            <div class="form-group">
                <label for="email">Adresse email</label>
                <input type="email" id="email" name="email" value="">
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" value="">
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirmer le mot de passe</label>
                <input type="password" id="confirmPassword" name="confirmPassword" value="">
            </div>

            <button type="submit">Enregistrer</button>
        </form>

 <button id="showModalBtn" 
        class="button delete-button"> 
        Show Delete Confirmation 
    </button> 
  
    <div id="modal" class="modal-container"> 
        <div class="modal-content"> 
  
            <h2>Delete Confirmation</h2> 
            <p class="confirmation-message"> 
                Are you sure you want to delete this item? 
            </p> 
  
            <div class="button-container"> 
                <button id="cancelBtn" 
                    class="button cancel-button"> 
                    Cancel 
                </button> 
                <button id="deleteBtn" 
                    class="button delete-button"> 
                    Delete 
                </button> 
            </div> 
        </div> 
    </div> 
  
    <script> 
  
        // Get modal and buttons 
        const modal = document.getElementById('modal'); 
        const showModalBtn = document.getElementById('showModalBtn'); 
        const cancelBtn = document.getElementById('cancelBtn'); 
        const deleteBtn = document.getElementById('deleteBtn'); 
  
        // Show modal function 
        function showModal() { 
            modal.style.display = 'flex'; 
        } 
  
        // Hide modal function 
        function hideModal() { 
            modal.style.display = 'none'; 
        } 
  
        // Attach click event listeners 
        showModalBtn.addEventListener('click', showModal); 
        cancelBtn.addEventListener('click', hideModal); 
        deleteBtn.addEventListener('click', hideModal); 
    </script> 
    

{% endblock %}